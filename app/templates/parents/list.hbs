{{#bs-button onClick=(route-action 'createParent')}}
  Create parent
{{/bs-button}}

<div class="row">
  <div class="col-md-12">
    Click on a newly created parent UUID below
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <th>#Id</th>
    </thead>
    <tbody>
    {{#each model as |parent|}}
      {{#link-to 'parent' parent.id tagName = "tr"}}
        <td>{{parent.id}}</td>
      {{/link-to}}
    {{/each}}
    </tbody>
  </table>
</div>
